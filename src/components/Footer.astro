---
import { Icon } from "astro-icon/components";

import { translationsFooter } from "@i18n/Footer";

const { appVersion } = Astro.locals;

const currentLang = Astro.currentLocale === "en" ? "en" : "pt-br";

const translationObject = translationsFooter[currentLang];
---

<footer>
  <section id="socials">
    <h1>{translationObject.h1}</h1>
    <ul id="links">
      <li>
        <a
          href="https://github.com/eddyyxxyy"
          target="_blank"
          rel="noreferer"
          aria-label={translationObject.githubLinkAriaLabel}
          title="Github"
        >
          <Icon name="github-logo" size={32} />
        </a>
      </li>
      <li>
        <a
          href="https://www.linkedin.com/in/edsonrobertopimenta/"
          target="_blank"
          rel="noreferer"
          aria-label={translationObject.linkedinLinkAriaLabel}
          title="LinkedIn"
        >
          <Icon name="linkedin-logo" size={32} />
        </a>
      </li>
      <li>
        <a
          href="https://www.youtube.com/@eddyxide"
          target="_blank"
          rel="noreferer"
          aria-label={translationObject.youtubeChannelLinkAriaLabel}
          title="Youtube"
        >
          <Icon name="youtube-logo" size={32} />
        </a>
      </li>
      <li>
        <a
          href="mailto:dev.edsonpimenta@gmail.com"
          aria-label={translationObject.emailLinkAriaLabel}
          title="E-mail"
        >
          <Icon name="envelope" size={32} />
        </a>
      </li>
      <li>
        <a
          href={translationObject.resumeHref}
          aria-label={translationObject.resumeLink}
          title={translationObject.resumeLink}
          download
        >
          <Icon name="file-pdf" size={32} />
        </a>
      </li>
    </ul>
  </section>
  <p>&copy; Edson Pimenta - 2025</p>
  <span
    ><a
      href="https://github.com/eddyyxxyy/portfolio"
      target="_blank"
      title={translationObject.repositoryLink}
      >v{appVersion} <Icon name="arrow_up_right" size={12} /></a
    ></span
  >
</footer>

<style>
  footer {
    padding: 2.4rem 2rem;
    text-align: center;
    border-top: 1px solid var(--neutral-100);
    box-shadow: rgba(0, 0, 0, 0.15) 3px 0px 3px 3px;
  }

  #socials {
    width: fit-content;
    padding-bottom: 2.4rem;
    border-bottom: 1px solid var(--neutral-100);
    margin: 0 auto 1.2rem;
  }

  h1 {
    font-size: 2.2rem;
    font-weight: 500;
    color: var(--neutral-800);
    margin-bottom: 2.4rem;
  }

  #links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 2.4rem;
    list-style: none;
  }

  #links a {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 0.4rem;
    background-color: var(--neutral-100);
    padding: 1.2rem;
    border-radius: 12px;
    transition: filter 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  #links a:is(:hover, :focus) {
    filter: brightness(1.1);
  }

  p {
    margin-bottom: 0.8rem;
  }

  footer > span {
    width: fit-content;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.6rem;
    border-bottom: 1px solid var(--neutral-900);
    margin: 0 auto;
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  footer > span:is(:hover, :focus) {
    filter: brightness(1.2);
    transform: scale(1.1);
  }

  @media (min-width: 1000px) {
    footer {
      padding: 4.8rem 12%;
    }

    h1 {
      font-size: 3.2rem;
    }
  }

  @media (min-width: 1280px) {
    footer {
      padding: 8rem 15%;
    }

    p {
      font-size: 2rem;
    }

    footer > span > a {
      font-size: 1.8rem;
    }
  }
</style>
